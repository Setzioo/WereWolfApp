<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             tools:context=".PlayerViewRowFragment" android:id="@+id/recyclerLayout"
                                             android:background="@drawable/recycleritemshape"
                                             android:layout_marginLeft="10dp"
                                             android:layout_marginRight="10dp"
                                             android:layout_marginTop="2dp">
    <TextView
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:text="@string/coucou" android:id="@+id/lobbyPseudoText"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textAlignment="textStart" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="@string/exclure"
            android:layout_width="117dp"
            android:layout_height="29dp"
            android:id="@+id/kickButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/buttonshapekick" android:textColor="@color/blanc_casse"
            android:textAlignment="center" android:textStyle="bold"
            android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>