<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             tools:context=".LobbyViewRowFragment" android:id="@+id/recyclerLayout"
                                             android:background="@drawable/recycleritemshape"
                                             android:layout_marginLeft="10dp"
                                             android:layout_marginRight="10dp"
                                             android:layout_marginTop="10dp">
    <TextView
            android:layout_width="224dp"
            android:layout_height="34dp"
            android:text="" android:id="@+id/pseudoText"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="textStart"/>
    <TextView
            android:text=""
            android:layout_width="120dp"
            android:layout_height="29dp"
            android:id="@+id/nbPlayerText"
            android:textSize="18sp" android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/pseudoText" app:layout_constraintVertical_bias="0.0"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/pseudoText"/>
    <Button
            android:text="@string/rejoindre"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:id="@+id/joinButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:background="@drawable/buttonshape" android:textColor="@color/blanc_casse"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>