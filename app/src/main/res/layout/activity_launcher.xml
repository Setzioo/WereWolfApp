<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LauncherActivity" android:id="@+id/launcherLayout"
        android:background="@drawable/background3">

    <TextView
            android:text="@string/touchez_pour_commencer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LaunchText"
            android:textSize="30sp" android:textColor="@android:color/white" android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/launcherCard" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:src="@drawable/loup_garou_launcher"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/launcherCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.39999998"/>


</android.support.constraint.ConstraintLayout>