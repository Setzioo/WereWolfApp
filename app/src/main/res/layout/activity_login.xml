<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:id="@+id/loginLayout"
        android:background="@drawable/background3"
>
    <Button
            android:text="@string/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signInButton"
            android:textSize="18sp"
            android:background="@drawable/buttonshape"
            android:textColor="@color/blanc_casse" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/signButton" app:layout_constraintEnd_toEndOf="@+id/signButton"
            android:layout_marginBottom="48dp" app:layout_constraintBottom_toTopOf="@+id/signButton"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/signButton"
            android:textSize="18sp"
            android:background="@drawable/buttonshape"
            android:textColor="@color/blanc_casse" android:textStyle="bold"
            android:layout_marginBottom="192dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loginTitle"
            android:textStyle="bold" android:textColor="@color/blanc_casse" android:textSize="56sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp"
            android:text="@string/login"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"/>
</android.support.constraint.ConstraintLayout>