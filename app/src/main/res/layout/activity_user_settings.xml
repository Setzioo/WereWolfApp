<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserSettingsActivity"
        android:background="@drawable/background3">

    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/icon_avatar"
            app:civ_border_color="#FF5722"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="0"
            app:civ_shadow_color="#8BC34A"
            android:id="@+id/avatarView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="103dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_settings"
            app:civ_border_color="#000000"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="0"
            app:civ_shadow_color="#8BC34A"
            app:layout_constraintEnd_toEndOf="@+id/avatarView"
            app:layout_constraintBottom_toBottomOf="@+id/avatarView" android:id="@+id/settingsView"/>
    <TextView
            android:text="Pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pseudoText" android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/avatarView" app:layout_constraintStart_toStartOf="@+id/avatarView"
            android:layout_marginTop="102dp" app:layout_constraintTop_toBottomOf="@+id/avatarView"/>
    <Button
            android:text="Sauvegarder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveButton"
            android:bottomRightRadius="15dp"
            android:bottomLeftRadius="15dp"
            android:topLeftRadius="15dp"
            android:topRightRadius="15dp"

            android:background="@drawable/buttonshape" android:textSize="18sp" android:textColor="@color/blanc_casse"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/editPseudoButton"
            app:layout_constraintStart_toStartOf="@+id/pseudoText" android:layout_marginTop="94dp"
            app:layout_constraintTop_toBottomOf="@+id/pseudoText"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/editPseudoButton"
            android:background="@color/colorBackground" android:tint="@android:color/white"
            app:layout_constraintTop_toTopOf="@+id/pseudoText" app:layout_constraintBottom_toBottomOf="@+id/pseudoText"
            app:layout_constraintStart_toEndOf="@+id/pseudoText" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>
