<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".YouAreDeadFragment" android:id="@+id/YouAreDeadLayout">
    <TextView
            android:text="Vous etes mort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textYouAreDead" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/textYouHaveToWait" android:textSize="36sp"
            android:textAlignment="center" android:textStyle="bold" android:textColor="@color/blanc_casse"
            android:layout_marginTop="50dp"/>
    <TextView
            android:text="Attendez la fin de la partie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textYouHaveToWait"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textYouAreDead"
            android:textSize="36sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" android:textAlignment="center" android:textStyle="bold"
            android:textColor="@color/blanc_casse" android:layout_marginBottom="50dp"/>
</android.support.constraint.ConstraintLayout>