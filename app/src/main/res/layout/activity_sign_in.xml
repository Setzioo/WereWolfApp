<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignInActivity"
        android:background="@drawable/background3">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/emailContainerIn"
            android:hint="@string/adresse_mail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/passwordContainerIn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textWebEmailAddress" android:textSize="24sp" android:textColor="@color/colorBlanc"
            android:textColorLink="@color/colorBlanc" android:textColorHint="@color/colorBlanc"
            android:textColorHighlight="@color/colorBlanc"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:ems="10"
            android:hint="@string/password"
            android:id="@+id/passwordContainerIn"
            app:layout_constraintTop_toBottomOf="@+id/emailContainerIn"
            app:layout_constraintBottom_toTopOf="@+id/loginButton"
            app:layout_constraintStart_toStartOf="@+id/emailContainerIn"
            app:layout_constraintEnd_toEndOf="@+id/emailContainerIn" android:inputType="textPassword"
            android:textSize="24sp" android:textColor="@color/colorBlanc" android:textColorLink="@color/colorBlanc"
            android:textColorHint="@color/colorBlanc"/>
    <Button
            android:text="@string/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordContainerIn"
            app:layout_constraintStart_toStartOf="@+id/passwordContainerIn"
            app:layout_constraintEnd_toEndOf="@+id/passwordContainerIn"
            android:bottomRightRadius="15dp"
            android:bottomLeftRadius="15dp"
            android:topLeftRadius="15dp"
            android:topRightRadius="15dp"

            android:background="@drawable/buttonshape" android:textSize="18sp" android:textColor="@color/blanc_casse"
            android:textStyle="bold"/>
    <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/returnSignInButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:scaleType="fitCenter"
            android:contentDescription="@string/bouton_retour" android:background="@android:color/transparent"/>
    <CheckBox
            android:text="Se souvenir de moi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rememberMeCheckBox"
            app:layout_constraintTop_toBottomOf="@+id/passwordContainerIn"
            app:layout_constraintBottom_toTopOf="@+id/loginButton"
            app:layout_constraintStart_toStartOf="@+id/passwordContainerIn"
            app:layout_constraintEnd_toEndOf="@+id/passwordContainerIn" android:textColor="@android:color/white"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox" android:checked="true"/>
</android.support.constraint.ConstraintLayout>