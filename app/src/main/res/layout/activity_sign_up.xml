<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity"
        android:background="@color/colorBackground">
    <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp" app:srcCompat="@android:drawable/ic_menu_revert"
            android:background="@color/colorBackground" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:scaleType="fitCenter"
            android:id="@+id/returnSignUpButton" android:contentDescription="@string/bouton_retour"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/emailContainerUp"
            android:hint="@string/adresse_mail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/passwordContainerUp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textWebEmailAddress" android:textSize="24sp" android:textColor="@color/colorBlanc"
            android:textColorLink="@color/colorBlanc" android:textColorHint="@color/colorBlanc"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordContainerUp"
            android:hint="@string/password"
            app:layout_constraintTop_toBottomOf="@+id/emailContainerUp"
            app:layout_constraintBottom_toTopOf="@+id/signButton"
            app:layout_constraintStart_toStartOf="@+id/emailContainerUp"
            app:layout_constraintEnd_toEndOf="@+id/emailContainerUp" android:textColor="@color/colorBlanc"
            android:textSize="24sp" android:textColorLink="@color/colorBlanc"
            android:textColorHighlight="@color/colorBlanc" android:textColorHint="@color/colorBlanc"/>
    <Button
            android:text="@string/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordContainerUp"
            app:layout_constraintStart_toStartOf="@+id/passwordContainerUp"
            app:layout_constraintEnd_toEndOf="@+id/passwordContainerUp"

            android:background="@drawable/buttonshape" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>