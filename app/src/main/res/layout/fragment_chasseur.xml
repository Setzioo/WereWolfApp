<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".ChasseurFragment"
                                             android:background="@drawable/background3">
    <TextView
            android:text="@string/_10"
            android:layout_width="62dp"
            android:layout_height="53dp"
            android:id="@+id/chasseurTimer" android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/blanc_casse" android:textStyle="bold"
            android:background="@drawable/pseudoshape"
            android:textAlignment="center"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:layout_marginTop="16dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="618dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/chasseurRecyclerView"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/chasseurTimer"/>
    <TextView
            android:text="@string/selectionnez_un_joueur"
            android:layout_width="296dp"
            android:layout_height="42dp"
            android:id="@+id/textView4" android:textSize="24sp"
            android:textStyle="bold" android:textColor="@color/blanc_casse"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="textStart"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/chasseurTimer"
            app:layout_constraintBottom_toBottomOf="@+id/chasseurTimer"/>
</android.support.constraint.ConstraintLayout>