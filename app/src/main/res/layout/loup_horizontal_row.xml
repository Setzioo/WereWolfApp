<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:background="@color/transparentBackground">


    <android.support.v7.widget.CardView
            android:id="@+id/loupCardPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="3dp"
            android:layout_margin="5dp"
            app:cardUseCompatPadding="true" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/transparentBackground"
        >

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" android:id="@+id/constraintLayout"
                android:background="@color/transparentBackground">

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/wolfieFace"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:civ_border_color="@color/blanc_casse"
                    app:civ_border_width="4dp"
                    app:srcCompat="@drawable/icon_avatar"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/wolfieName"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_chainStyle="spread_inside"
                    android:background="@color/transparentBackground"/>

            <TextView
                    android:id="@+id/wolfieName"
                    android:layout_width="92dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:text="@string/textview"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:background="@drawable/pseudoshape"
                    app:layout_constraintTop_toBottomOf="@+id/wolfieFace"
                    app:layout_constraintStart_toStartOf="@+id/wolfieFace"
                    app:layout_constraintEnd_toEndOf="@+id/wolfieFace" android:textColor="@color/colorBlanc"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>