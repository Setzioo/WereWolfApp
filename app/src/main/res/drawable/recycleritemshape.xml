<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/colorBackground"/>
            <gradient
                    android:type="radial"
                    android:gradientRadius="600"
                    android:startColor="@color/colorBackground"
                    android:centerColor="@color/colorDarkerBackground"
                    android:centerX="50%"
                    android:centerY="50%"
                    android:endColor="@color/colorDarkerBackground"
            />
            <stroke android:width="2dp" android:color="@color/blanc_casse" />
            <corners android:radius="20dp"/>
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>
</selector>